generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model University {
  id Int @id @default(autoincrement())
  name String @unique
  description String?
  rating Float @default(0)
  societyCount Int @default(0)
  website String?
  studentsUnion String?

  updated_at DateTime @default(now()) @updatedAt

  societies Society[]
}


model Society {
  id Int @id @default(autoincrement())
  name String @unique
  description String?
  rating Float @default(0)
  memberCount Int @default(0)
  website String?

  updated_at DateTime @default(now()) @updatedAt

  universityId Int
  university University @relation(fields: [universityId], references: [id])

  reviews Review[]
}


model Review {
  id Int @id @default(autoincrement())
  rating Float
  comment String
  posted_at DateTime

  societyId Int
  society Society @relation(fields: [societyId], references: [id])

  userId Int
  user User @relation(fields: [userId], references: [id])
}

model User {
  id Int @id @default(autoincrement())
  ip String @unique
  fingerprint String
  is_banned Boolean @default(false)

  reviews Review[]
}